{
	"name": "parallax-fox",
	"description": "Parallax Like A Fox Portfolio",
	"version": "1.0.0",
	"author": "Derek Sligh<@like-a-fox>",
	"scripts": {
		"build": "gatsby clean && gatsby build",
		"deploy": "gatsby clean && gatsby build && firebase deploy",
		"now": "yarn deploy && now --public",
		"develop": "gatsby develop",
		"format": "prettier --write \"**/*.{js,jsx,json,md}\"",
		"serve": "gatsby serve",
		"lint": "eslint \"src/**/*.{js,jsx,json,md}\"",
		"lint:fix": "yarn format && eslint \"src/**/*.{js,jsx,json,md}\" --fix",
		"flow": "./node_modules/flow-bin/cli.js"
	},
	"dependencies": {
		"@hot-loader/react-dom": "^16.13.0",
		"@loadable/component": "^5.12.0",
		"@material-ui/core": "^4.9.14",
		"babel-plugin-styled-components": "^1.10.7",
		"babel-plugin-tailwind-components": "^0.5.10",
		"dotenv": "^8.2.0",
		"firebase": "^7.12.0",
		"gatsby": "^2.20.2",
		"gatsby-image": "^2.3.0",
		"gatsby-plugin-firebase": "^0.2.0-beta.4",
		"gatsby-plugin-google-analytics": "^2.2.0",
		"gatsby-plugin-manifest": "^2.3.1",
		"gatsby-plugin-offline": "^3.1.0",
		"gatsby-plugin-purgecss": "^4.0.1",
		"gatsby-plugin-react-helmet": "^3.2.0",
		"gatsby-plugin-sharp": "^2.5.1",
		"gatsby-plugin-smoothscroll": "^1.1.0",
		"gatsby-plugin-styled-components": "^3.2.0",
		"gatsby-plugin-tailwindcss": "^1.0.3",
		"gatsby-source-filesystem": "^2.2.1",
		"gatsby-transformer-sharp": "^2.4.1",
		"notistack": "^0.9.16",
		"prop-types": "^15.7.2",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-helmet": "^5.2.1",
		"react-spring": "^8.0.18",
		"react-vis": "^1.11.7",
		"styled-components": "^5.0.1",
		"tailwindcss": "^1.2.0",
		"typeface-cantata-one": "^0.0.72",
		"typeface-open-sans": "^0.0.75"
	},
	"devDependencies": {
		"@babel/core": "^7.9.0",
		"babel-loader": "^8.1.0",
		"eslint-plugin-filenames": "^1.3.2",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-react": "^7.19.0",
		"eslint-plugin-react-hooks": "^3.0.0",
		"husky": "^4.2.3",
		"lint-staged": "^10.1.2",
		"now": "^18.0.0",
		"prettier": "^2.0.4"
	},
	"engines": {
		"node": ">=10"
	},
	"keywords": [
		"gatsby"
	],
	"license": "MIT",
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint:fix && git add .",
			"lint-staged": "yarn lint:fix",
			"pre-push": "yarn deploy"
		}
	},
	"prettier": {
		"singleQuote": true,
		"useTabs": true,
		"jsxSingleQuote": true,
		"endOfLine": "lf",
		"semi": true,
		"jsxBracketSameLine": true,
		"arrowParens": "always",
		"trailingComma": "es5"
	},
	"eslintConfig": {
		"globals": {
			"tw": true
		},
		"extends": [
			"react-app",
			"eslint:recommended",
			"plugin:react/recommended",
			"plugin:import/errors",
			"plugin:import/warnings"
		],
		"plugins": [
			"react-hooks",
			"filenames",
			"import"
		],
		"rules": {
			"react-hooks/rules-of-hooks": "error",
			"react-hooks/exhaustive-deps": "warn",
			"react/prop-types": "error",
			"filenames/match-regex": [
				2,
				"^(_[a-zA-Z]+|[index]+)",
				true
			],
			"no-mixed-spaces-and-tabs": "off"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/like-a-fox/parallax-fox"
	},
	"bugs": {
		"url": "https://github.com/like-a-fox/parallax-fox/issues"
	}
}
